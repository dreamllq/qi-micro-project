{
  "compilerOptions": {
    "target": "ESNext",
    "useDefineForClassFields": true,
    "module": "ESNext",
    "moduleResolution": "Node",
    "strict": true,
    "jsx": "preserve",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "esModuleInterop": true,
    "lib": [
      "ESNext",
      "DOM"
    ],
    "skipLibCheck": true,
    "noEmit": false,
    "paths": {
      "@/*": [
        "./src/*",
        "./src/*.vue",
        "./src/*/index.vue"
      ]
    },
    "allowJs": true,
    "noImplicitAny": false,
    "typeRoots": [
      "./node_modules/@types",
      ".exposes-types"
    ],
    "outDir": "ts-dist"
  },
  "include": [
    "src/**/*.ts",
    "src/**/*.d.ts",
    "src/**/*.tsx",
    "src/**/*.vue",
    "scripts/*.ts"
  ],
  "ts-node": {
    "compilerOptions": {
      "module": "CommonJS"
    }
  }
}